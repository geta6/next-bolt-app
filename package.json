{
  "name": "botbase",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "scripty",
    "start": "scripty",
    "dev": "scripty"
  },
  "scripty": {
    "silent": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{png,jpg,jpeg,gif}": [
      "imagemin-lint-staged"
    ],
    "*.json": [
      "jsonlint",
      "prettier --write"
    ]
  },
  "apps": [
    {
      "name": "bot",
      "script": "ts-node",
      "args": "app/server",
      "watch": [
        "app/server"
      ],
      "pid_file": "tmp/bot.pid",
      "out_file": "tmp/logs/bot.stdout.log",
      "error_file": "tmp/logs/bot.stderr.log",
      "instances": 1,
      "exec_mode": "fork"
    },
    {
      "name": "ngrok",
      "script": "ts-node",
      "args": "app/dev/ngrok.ts",
      "pid_file": "tmp/ngrok.pid",
      "out_file": "tmp/logs/ngrok.stdout.log",
      "error_file": "tmp/logs/ngrok.stderr.log",
      "instances": 1,
      "exec_mode": "fork"
    }
  ],
  "dependencies": {
    "@slack/bolt": "^2.4.1",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "next": "^11.1.1",
    "ngrok": "^3.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "scripty": "^2.0.0",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/helmet": "^4.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "imagemin-lint-staged": "^0.4.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.5.1",
    "pm2": "^4.5.0",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0"
  }
}
