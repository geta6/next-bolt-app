{
  "name": "botbase",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "scripty",
    "start": "scripty",
    "ngrok": "scripty",
    "dev": "scripty"
  },
  "scripty": {
    "silent": true
  },
  "apps": [
    {
      "name": "bot",
      "script": "ts-node",
      "args": "app/server",
      "watch": [
        "app/server"
      ],
      "pid_file": "tmp/bot.pid",
      "out_file": "tmp/logs/bot.stdout.log",
      "error_file": "tmp/logs/bot.stderr.log",
      "instances": 1,
      "exec_mode": "fork"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{png,jpg,jpeg,gif}": [
      "imagemin-lint-staged"
    ],
    "*.json": [
      "jsonlint",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@slack/bolt": "^1.6.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.45",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/webpack": "^4.41.7",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "next": "^9.2.2",
    "pm2": "^4.2.3",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "scripty": "^1.9.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2",
    "webpack": "^4.41.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "imagemin-lint-staged": "^0.4.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  }
}
