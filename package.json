{
  "name": "botbase",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "scripty",
    "ngrok": "scripty",
    "dev": "scripty"
  },
  "scripty": {
    "silent": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{png,jpg,jpeg,gif}": [
      "imagemin-lint-staged",
      "git add"
    ],
    "*.json": [
      "jsonlint",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@slack/bolt": "^1.4.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/webpack": "^4.39.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "next": "^9.1.1",
    "nodemon": "^1.19.4",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "scripty": "^1.9.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.0.9",
    "imagemin-lint-staged": "^0.4.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  }
}
